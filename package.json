{
  "name": "hutt_stone",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "engines": {
    "node": "6.4.0"
  },
  "scripts": {
    "start": "node server/server.js",
    "dev": "nodemon server/server.js & npm run watch",
    "postinstall": "npm run build",
    "test": "mocha --compilers js:babel-register test/**/*.js*",
    "mkdir": "mkdir -p frontend/build",
    "build": "npm run clean && npm run mkdir && npm run build:html && npm run build:css && npm run build:js && npm run build:img",
    "watch": "npm run watch:html & npm run watch:css & npm run watch:js",
    "clean": "rm -rf frontend/build",
    "build:img": "mkdir frontend/build/img && cp frontend/src/img/* frontend/build/img/",
    "build:html": "npm run clean:html && cp frontend/src/index.html frontend/build/",
    "watch:html": "npm run build:html && chokidar frontend/index.html -c 'npm run build:html'",
    "clean:html": "rm -f frontend/build/index.html",
    "build:css": "npm run clean:css && mkdir frontend/build/styles && cp frontend/src/styles/* frontend/build/styles",
    "clean:css": "rm -rf frontend/build/styles",
    "watch:css": "npm run build:css && chokidar frontend/src/styles/*.css -c 'npm run build:css'",
    "build:js": "npm run clean:js && webpack",
    "watch:js": "npm run build:js && webpack --watch",
    "clean:js": "rm -f frontend/build/$npm_package_name.$npm_package_version.js frontend/build/$npm_package_name.$npm_package_version.js.map"
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LifelongLearner13/huttese_stone_spaced_repetition.git"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "auth0-js": "^7.6.0",
    "auth0-lock": "^10.7.3",
    "body-parser": "^1.15.2",
    "express": "^4.14.0",
    "isomorphic-fetch": "^2.2.1",
    "jwt-decode": "^2.1.0",
    "method-override": "~1.0.0",
    "mongoose": "^4.5.10",
    "mongoose-deep-populate": "^3.0.0",
    "react": "^15.2.1",
    "react-dom": "^15.2.1",
    "react-redux": "^4.4.5",
    "react-router": "^2.6.1",
    "redux": "^3.5.2",
    "redux-logger": "^2.7.4",
    "redux-thunk": "^2.1.0"
  },
  "devDependencies": {
    "babel-core": "^6.11.4",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-object-rest-spread": "^6.20.2",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "babel-register": "^6.11.6",
    "chai": "^3.5.0",
    "chokidar-cli": "^1.2.0",
    "mocha": "^2.5.3",
    "morgan": "^1.7.0",
    "react-addons-test-utils": "^15.2.1",
    "webpack": "^1.13.1"
  }
}
