{
  "name": "huttese_stone_spaced_repetition",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "engines": {
    "node": "6.4.0"
  },
  "scripts": {
    "start": "node server/server.js",
    "postinstall": "npm run build",
    "test": "mocha --compilers js:babel-register test/**/*.js*",
    "mkdir": "mkdir -p frontend/build",
    "build": "npm run clean && npm run mkdir && npm run build:html && npm run build:css && npm run build:js",
    "serve": "node server.js",
    "http": "http-server frontend/build/",
    "watch": "npm run watch:html & npm run watch:css & npm run watch:js",
    "clean": "rm -rf frontend/build",
    "build:html": "npm run clean:html && cp frontend/index.html frontend/build/",
    "watch:html": "npm run build:html && chokidar frontend/index.html -c 'npm run build:html'",
    "clean:html": "rm -f frontend/build/index.html",
    "build:css": "npm run clean:css && cp frontend/src/style.css frontend/build/",
    "clean:css": "rm -f frontend/build/style.css",
    "watch:css": "npm run build:css && chokidar frontend/src/style.css -c 'npm run build:css'",
    "build:js": "npm run clean:js && webpack",
    "watch:js": "npm run build:js && webpack --watch",
    "clean:js": "rm -f frontend/build/$npm_package_name.$npm_package_version.js frontend/build/$npm_package_name.$npm_package_version.js.map"
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LifelongLearner13/huttese_stone_spaced_repetition.git"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^0.8.7",
    "body-parser": "^1.15.2",
    "connect-flash": "^0.1.1",
    "cookie-parser": "^1.4.3",
    "express": "^4.14.0",
    "express-session": "^1.14.1",
    "mongoose": "^4.5.10",
    "mongoose-deep-populate": "^3.0.0",
    "morgan": "^1.7.0",
    "passport": "^0.3.2",
    "passport-google-oauth2": "^0.1.6",
    "passport-http": "^0.3.0",
    "body-parser": "^1.15.2",
    "isomorphic-fetch": "^2.2.1",
    "react": "^15.2.1",
    "react-countdown-clock": "^1.0.5",
    "react-dom": "^15.2.1",
    "react-redux": "^4.4.5",
    "react-router": "^2.7.0",
    "redux": "^3.5.2",
    "redux-thunk": "^2.1.0"
  },
  "devDependencies": {
    "babel-core": "^6.11.4",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "babel-register": "^6.11.6",
    "chai": "^3.5.0",
    "chokidar-cli": "^1.2.0",
    "http-server": "^0.9.0",
    "mocha": "^2.5.3",
    "react-addons-test-utils": "^15.2.1",
      "webpack": "^1.13.1",
    "morgan": "^1.7.0",
    "url-pattern": "^1.0.1"
  }
}
